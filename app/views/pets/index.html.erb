<div class="container">
  <div class="row text-center mt-3">
    <div class="col-12">
      <h1>List of pets 🐶</h1>
    </div>
  </div>

  <div class="row justify-content-center my-3 text-center">
    <div class="card" style="width: 18rem;">
      <ul class="list-group list-group-flush">
        <% @pets.each do |pet| %>
          <li class="list-group-item"><%= link_to pet.name, pet_path(pet) %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to "Add a lost pet", new_pet_path, class: 'btn btn-primary' %>
  </div>
</div>
